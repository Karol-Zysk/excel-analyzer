{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:backend",
      "type": "shell",
      "command": "cd backend; npm run start:dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev",
        "focus": false
      }
    },
    {
      "label": "dev:frontend",
      "type": "shell",
      "command": "cd frontend; npm run dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev",
        "focus": false
      }
    },
    {
      "label": "dev:open-both-on-folder-open",
      "dependsOn": [
        "dev:backend",
        "dev:frontend"
      ],
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
